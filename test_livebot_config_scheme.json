{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "general": {
      "type": "object",
      "properties": {
        "debug": {
          "type": "boolean"
        }
      },
      "required": ["debug"]
    },
    "database": {
      "type": "object",
      "properties": {
        "url": {
          "type": "string"
        },
        "name": {
          "type": "string"
        }
      },
      "required": ["url", "name"]
    },
    "redis": {
      "type": "object",
      "properties": {
        "url": {
          "type": "string"
        }
      },
      "required": ["url"]
    },
    "telegram": {
      "type": "object",
      "properties": {
        "token": {
          "type": "string"
        },
        "log_chat_id": {
          "type": "string"
        },
        "log_thread_id": {
          "type": "integer"
        },
        "owners": {
          "type": "array",
          "items": {
            "type": "integer"
          }
        }
      },
      "required": ["token", "log_chat_id", "log_thread_id", "owners"]
    },
    "weather": {
      "type": "object",
      "properties": {
        "api_key": {
          "type": "string"
        },
        "region": {
          "type": "string"
        }
      },
      "required": ["api_key", "region"]
    },
    "event": {
      "type": "object",
      "properties": {
        "start_time": {
          "type": "string",
          "format": "date-time"
        },
        "end_time": {
          "type": "string",
          "format": "date-time"
        },
        "open": {
          "type": "boolean"
        }
      },
      "required": ["start_time", "end_time", "open"]
    },
    "channel": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "chat_id": {
          "type": "string"
        }
      },
      "required": ["id", "chat_id"]
    }
  },
  "required": ["general", "database", "redis", "telegram", "weather", "event", "channel"]
}

